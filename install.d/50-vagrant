set -eux

mkdir /home/vagrant

useradd vagrant -d /home/vagrant -s /bin/bash

chown -R vagrant:vagrant ~vagrant

mkdir ~vagrant/.ssh

echo 'ssh-rsa  vagrant insecure public key' >> ~vagrant/.ssh/authorized_keys

chmod 600 ~vagrant/.ssh/authorized_keys
chmod 700 ~vagrant/.ssh

chown -R vagrant:vagrant ~vagrant/.ssh

#TODO: set this up to be nice
#echo vagrant | passwd vagrant --stdin
#echo vagrant | passwd root --stdin

echo 'vagrant ALL=(ALL) NOPASSWD: ALL' >> /etc/suoders

echo 'UseDNS no' >> /etc/ssh/sshd_config



